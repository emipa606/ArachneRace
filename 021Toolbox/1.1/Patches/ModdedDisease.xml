<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Alpha Animals</li>
    </mods>
    <success>Normal</success>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/HediffDef[defName="Arachne_Regen"]/modExtensions/li/ignoreWhenHealing</xpath>
          <value>
            <li>AA_LockJawDisease</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/HediffDef[defName="Arachne_Regen"]/modExtensions/li/infectionsAllowed</xpath>
          <value>
            <li>AA_LockJawDisease</li>
            <li>AA_SwarmlingImplantation</li>
            <li>AA_VirulentFungalInfection</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>